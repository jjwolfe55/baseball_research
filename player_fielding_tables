CREATE TABLE baseball_research.player_fielding_main (
player_id INT UNSIGNED NOT NULL,
player_name VARCHAR(45) NOT NULL,
team_id CHAR(3) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
pos CHAR(3),
inn DECIMAL(5,1) UNSIGNED,
plays SMALLINT UNSIGNED,
g SMALLINT UNSIGNED,
gs SMALLINT UNSIGNED,
po SMALLINT UNSIGNED,
a SMALLINT UNSIGNED,
e SMALLINT UNSIGNED,
drs SMALLINT SIGNED,
uzr DECIMAL(4,2) SIGNED,
sb SMALLINT UNSIGNED,
cs SMALLINT UNSIGNED,
pb SMALLINT UNSIGNED,
frm DECIMAL(4,2) SIGNED,
PRIMARY KEY (player_id,season_id,pos)
);

