CREATE TABLE baseball_research.team_venue_factor (
franchise_id SMALLINT UNSIGNED NOT NULL,
team_id CHAR(3) NOT NULL,
team_name VARCHAR(30) NOT NULL,
venue_name VARCHAR(40) NOT NULL,
season_id SMALLINT UNSIGNED NOT NULL,
batted_balls_home SMALLINT UNSIGNED NOT NULL,
h_home SMALLINT UNSIGNED NOT NULL,
1b_home SMALLINT UNSIGNED NOT NULL,
2b_home SMALLINT UNSIGNED NOT NULL,
3b_home SMALLINT UNSIGNED NOT NULL,
hr_home SMALLINT UNSIGNED NOT NULL,
bb_home SMALLINT UNSIGNED NOT NULL,
so_home SMALLINT UNSIGNED NOT NULL,
pa_home SMALLINT UNSIGNED NOT NULL,
batted_balls_away SMALLINT UNSIGNED NOT NULL,
h_away SMALLINT UNSIGNED NOT NULL,
1b_away SMALLINT UNSIGNED NOT NULL,
2b_away SMALLINT UNSIGNED NOT NULL,
3b_away SMALLINT UNSIGNED NOT NULL,
hr_away SMALLINT UNSIGNED NOT NULL,
bb_away SMALLINT UNSIGNED NOT NULL,
so_away SMALLINT UNSIGNED NOT NULL,
pa_away SMALLINT UNSIGNED NOT NULL,
PRIMARY KEY (franchise_id,team_id,season_id)
);

CREATE TABLE baseball_research.calc_linear_weights (
season_id SMALLINT UNSIGNED NOT NULL,
1b DECIMAL(3,2) UNSIGNED NOT NULL,
2b DECIMAL(3,2) UNSIGNED NOT NULL,
3b DECIMAL(3,2) UNSIGNED NOT NULL,
hr DECIMAL(3,2) UNSIGNED NOT NULL,
bb DECIMAL(3,2) UNSIGNED NOT NULL,
ibb DECIMAL(3,2) UNSIGNED NOT NULL,
hbp DECIMAL(3,2) UNSIGNED NOT NULL,
sb DECIMAL(3,2) UNSIGNED NOT NULL,
cs DECIMAL(3,2) NOT NULL,
PRIMARY KEY (season_id)
);

